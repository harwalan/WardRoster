<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
     	android:id="@+id/scrollview1"
     	android:layout_width="fill_parent"
     	android:layout_height="fill_parent">
    <LinearLayout
    	android:id="@+id/verticallinear" 
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">
    <LinearLayout 
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

<TextView 
    android:id="@+id/title_last"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textSize="18sp"
    android:text="Family Details Title"
    android:height="30px" 
    />
<TextView 
    android:id="@+id/title_first"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:textSize="18sp"
    android:text="Family Details Title"
    android:height="30px" 
    />
    </LinearLayout>
		<ImageButton
		    android:id="@+id/person_image"
		    android:layout_width="300dip"
		    android:layout_height="200dip"
		    android:src="@drawable/blank_image"
		     />	
	<HorizontalScrollView 
	     	android:id="@+id/scrollview2"
	     	android:layout_width="fill_parent"
	     	android:layout_height="fill_parent">
		<TableLayout 
			android:id="@+id/details_table"
		    android:layout_width="fill_parent"
		    android:layout_height="wrap_content"
		    android:stretchColumns="1" >
		    <TableRow>
		        <TextView
					android:id="@+id/phone_label"
		            android:layout_column="0"
		            android:padding="3dip" />
		        <TextView
					android:id="@+id/phone"
		            android:layout_column="1"
		            android:padding="3dip"  
		            android:layout_width="200dip" />
		    </TableRow>
		    <TableRow>
		        <TextView
					android:id="@+id/email_label"
		            android:layout_column="0"
		            android:padding="3dip" />
		        <TextView
					android:id="@+id/email"
		            android:layout_column="1"
		            android:padding="3dip"  
		            android:layout_width="200dip" />
		    </TableRow>
		    <TableRow>
		        <TextView
					android:id="@+id/gender_label"
		            android:layout_column="0"
		            android:padding="3dip" />
		        <TextView
					android:id="@+id/gender"
		            android:layout_column="1"
		            android:padding="3dip"  
		            android:layout_width="200dip" />
		    </TableRow>
		    <TableRow>
		        <TextView
					android:id="@+id/age_label"
		            android:layout_column="0"
		            android:padding="3dip" />
		        <TextView
					android:id="@+id/age"
		            android:layout_column="1"
		            android:padding="3dip" />
		    </TableRow>
		    <TableRow>
		        <TextView
					android:id="@+id/birth_label"
		            android:layout_column="0"
		            android:padding="3dip" />
		        <TextView
					android:id="@+id/birth"
		            android:layout_column="1"
		            android:padding="3dip" />
		    </TableRow>
		    <TableRow>
		        <TextView
					android:id="@+id/baptized_label"
		            android:layout_column="0"
		            android:padding="3dip" />
		        <TextView
					android:id="@+id/baptized"
		            android:layout_column="1"
		            android:padding="3dip" />
		    </TableRow>
		    <TableRow>
		        <TextView
					android:id="@+id/confirmed_label"
		            android:layout_column="0"
		            android:padding="3dip" />
		        <TextView
					android:id="@+id/confirmed"
		            android:layout_column="1"
		            android:padding="3dip" />
		    </TableRow>
		    <TableRow>
		        <TextView
					android:id="@+id/endowed_label"
		            android:layout_column="0"
		            android:padding="3dip" />
		        <TextView
					android:id="@+id/endowed"
		            android:layout_column="1"
		            android:padding="3dip" />
		    </TableRow>
		    <TableRow>
		        <TextView
					android:id="@+id/priesthood_label"
		            android:layout_column="0"
		            android:padding="3dip" />
		        <TextView
					android:id="@+id/priesthood"
		            android:layout_column="1"
		            android:padding="3dip" />
		    </TableRow>
		    <TableRow>
		        <TextView
					android:id="@+id/mission_label"
		            android:layout_column="0"
		            android:padding="3dip" />
		        <TextView
					android:id="@+id/mission"
		            android:layout_column="1"
		            android:padding="3dip" />
		    </TableRow>
		    <TableRow>
		        <TextView
					android:id="@+id/marriage_status_label"
		            android:layout_column="0"
		            android:padding="3dip" />
		        <TextView
					android:id="@+id/marriage_status"
		            android:layout_column="1"
		            android:padding="3dip" />
		    </TableRow>
		    <TableRow>
		        <TextView
					android:id="@+id/recommend_expiration_label"
		            android:layout_column="0"
		            android:padding="3dip" />
		        <TextView
					android:id="@+id/recommend_expiration"
		            android:layout_column="1"
		            android:padding="3dip" />
		    </TableRow>
		    <TableRow>
		        <TextView
					android:id="@+id/membership_number_label"
		            android:layout_column="0"
		            android:padding="3dip" />
		        <TextView
					android:id="@+id/membership_number"
		            android:layout_column="1"
		            android:padding="3dip" />
		    </TableRow>
		    <TableRow>
		        <TextView
					android:id="@+id/spouse_member_label"
		            android:layout_column="0"
		            android:padding="3dip" />
		        <TextView
					android:id="@+id/spouse_member"
		            android:layout_column="1"
		            android:padding="3dip" />
		    </TableRow>
		    <TableRow>
		        <TextView
					android:id="@+id/sealed_to_spouse_label"
		            android:layout_column="0"
		            android:padding="3dip" />
		        <TextView
					android:id="@+id/sealed_to_spouse"
		            android:layout_column="1"
		            android:padding="3dip" />
		    </TableRow>
		    <TableRow>
		        <TextView
					android:id="@+id/visiting_teacher_1_label"
		            android:layout_column="0"
		            android:padding="3dip" />
		        <TextView
					android:id="@+id/visiting_teacher_1"
		            android:layout_column="1"
		            android:padding="3dip" />
		    </TableRow>
		    <TableRow>
		        <TextView
					android:id="@+id/visiting_teacher_2_label"
		            android:layout_column="0"
		            android:padding="3dip" />
		        <TextView
					android:id="@+id/visiting_teacher_2"
		            android:layout_column="1"
		            android:padding="3dip" />
		    </TableRow>
		</TableLayout>
	</HorizontalScrollView>
	</LinearLayout>
</ScrollView>
